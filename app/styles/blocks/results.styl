.results
  padding-top: 20px
  background-color: $desert-sand-1

  &__item
    padding: 0 20px
    display: flex
    flex-direction: row
    justify-content: center
    
  &__before
  &__after
    margin-bottom: 20px
    background-color: $white
    border: 4px solid $white
    
  &__before
    margin-right: 20px

  &__note
    padding-left: 2px
    color: lighten($black, 30%)
    font(15px, 23px, 700, uppercase)